<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="16dp">

    <!-- Top Header (Profile & Name) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/abdi"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- Challenge Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backround"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/we_have_new_challenge"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_200_nstep"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnJoinChallenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/join_challenge"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                android:textColor="#FF6F00"/>
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gym_img1" />
    </LinearLayout>

    <!-- Workout Categories -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Body"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upper"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <!-- Recommended Workout Section -->
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommended Workout"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

    <!-- Bottom Navigation Bar -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/chart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="260dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#222222">

        <ImageView
            android:id="@+id/ic_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:padding="10dp"
            android:src="@drawable/btn_1" />

        <ImageView
            android:id="@+id/ic_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:src="@drawable/btn_2"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/ic_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:src="@drawable/btn_3"
            android:padding="10dp"/>


        <ImageView
            android:id="@+id/ic_profile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:src="@drawable/btn_4"
            android:padding="10dp"/>
    </LinearLayout>

</LinearLayout>
